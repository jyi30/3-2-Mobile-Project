<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OwnerMenuAddFragment">

        <ImageButton
            android:id="@+id/back"
            android:layout_width="105dp"
            android:layout_height="50dp"
            android:background="#00ff0000"
            android:src="@drawable/ic_baseline_arrow_back_24" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/add_menu_image"
                android:layout_width="100dp"
                android:layout_height="match_parent" />

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/add_menu_name"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:fontFamily="@font/nanumsquare_0"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:hint="메뉴이름"></EditText>

                <EditText
                    android:id="@+id/add_menu_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/nanumsquare_acl"
                    android:gravity="center"
                    android:textSize="13dp"
                    android:hint="메뉴설명"></EditText>

                <EditText
                    android:id="@+id/menu_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/nanumsquare_acl"
                    android:gravity="center"
                    android:drawableStart="@drawable/ic_baseline_monetization_on_24"
                    android:textSize="15dp"
                    android:hint="가격"></EditText>

            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btn_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="200dp"
            android:background="@drawable/button1"
            android:ems="10"
            android:fontFamily="@font/nanumsquare_acl"
            android:text="저장"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btn_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:background="@drawable/button1"
            android:ems="10"
            android:fontFamily="@font/nanumsquare_acl"
            android:text="사진 선택"
            android:textColor="@color/black" />

        <ProgressBar
            android:id="@+id/add_store_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            />

</FrameLayout>